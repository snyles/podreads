<%- include('../partials/header') %>

<h2><%= booklist.name %></h2>
<p><a href="/booklists/<%= booklist._id %>/edit">Edit Name</a></p>

<% if (booklist.books.length === 0) { %>
  <p>This list is empty! <a href='/books'>Add books</a></p>
<% } %>
<% booklist.books.forEach(book => { %>
  <div class="bookcard">
    <% if (book.thumbnail) { %>
    <img src="<%= book.thumbnail %>"" alt="<%= book.title %>">
    <% } %>
    <% if (book.title) { %>
    <p><%= book.title %> </p>
    <% } %>
    <% if (book.author) { %>
    <p>by <%= book.author %> </p>
    <% } %>
    <% if (book.published) { %>
      <p>Published: <%= book.published.getFullYear() %> </p>
    <% } %>
    <% if (book.description) { %>
      <p>Description: <%= book.description %> </p>
    <% } %>
    <form action="/books/<%= book._id %>?_method=DELETE" method="post">
    <input type="text" name="booklistId" hidden value="<%= booklist._id %>">
    <button type="submit">Remove Book</button>
    </form>
  </div>
<% }) %>

<%- include('../partials/footer') %>
